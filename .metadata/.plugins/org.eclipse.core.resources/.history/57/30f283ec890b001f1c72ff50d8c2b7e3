#ifndef _GPIO_HPP_
#define _GPIO_HPP_
#ifdef __cplusplus
extern "C" {
#endif

#include "main.h"

/**
 * basic: TIM6/7, general:TIM2/3/4/5, advanced:TIM1/8
 */
class TimerBasic {
private:
	uint32_t Prescaler;
	uint32_t CounterMode;
	uint32_t Period;
	uint32_t ClockDivision;
	uint32_t RepetitionCounter;
    TIM_TypeDef* m_timer;
public:
    TimerBasic(TIM_TypeDef* timer);
    TimerBasic(TIM_TypeDef* timer);
    void configure(uint32_t prescaler, uint32_t period);
    void start();
    void stop();
};




#ifdef __cplusplus
}
#endif



#endif
