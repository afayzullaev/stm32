#include "gpio.hpp"

Gpio::Gpio(uint16_t pin, GPIO_TypeDef* port) : mpin(pin), mport(port)
{

}

void Gpio::Init(void)
{
	RCC->AHB1ENR |= RCC_AHB1ENR_GPIODEN;
	mport->MODER |= 1UL << (mpin * 2);
}

void Gpio::Write(PIN_STATE state)
{
	switch (state) {
		case LOW:

			break;
		default:
			break;
	}
	if(state == 1 || state == 0)
	{
		mport->ODR = state << mpin;
	}
}

