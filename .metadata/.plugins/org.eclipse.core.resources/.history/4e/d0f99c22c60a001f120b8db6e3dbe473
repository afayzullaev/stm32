#include "gpio.hpp"

Gpio::Gpio(uint16_t pin, GPIO_TypeDef port) : mpin(pin), mport(port)
{

}

void Gpio::gpio_init(void)
{
	RCC->AHB1ENR |= RCC_AHB1ENR_GPIODEN;
	mport->MODER |= 1UL << (mpin * 2);
}

void Gpio::gpio_write(uint8_t state)
{
	if(state == 1 || state == 0)
	{
		GPIOD->ODR = state << mpin;
	}
}

