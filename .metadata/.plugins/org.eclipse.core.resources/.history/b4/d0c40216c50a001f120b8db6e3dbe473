#include "gpio.hpp"

Gpio::Gpio(uint16_t pin, GPIO_TypeDef* port) : mpin(pin), mport(port)
{

}

Gpio::gpio_init()
{
	RCC->AHB1ENR |= RCC_AHB1ENR_GPIODEN;
	mport->MODER |= 1UL << (pin * 2);
	mport->MODER |= 1UL << 26;
	mport->MODER |= 1UL << 28;
	mport->MODER |= 1UL << 30;
}

void gpio_init(void){
	// Enable GPIO clock for Port D
	RCC->AHB1ENR |= RCC_AHB1ENR_GPIODEN;
	GPIOD->MODER |= 1UL << 24;
	GPIOD->MODER |= 1UL << 26;
	GPIOD->MODER |= 1UL << 28;
	GPIOD->MODER |= 1UL << 30;
}

void gpio_write(uint8_t pin, uint8_t state){
	if(state == 1 || state == 0)
	{
		GPIOD->ODR = state << pin;
	}
}
