#include "gpio.hpp"

Gpio::Gpio(uint16_t pin, GPIO_TypeDef* port) : mpin(pin), mport(port)
{

}

void Gpio::Enable_Clock(void)
{
	switch (&mport) {
		case GPIOA:
			RCC->AHB1ENR |= RCC_AHB1ENR_GPIOAEN;
			break;
		case GPIOB:
			RCC->AHB1ENR |= RCC_AHB1ENR_GPIOBEN;
			break;
		case GPIOC:
			RCC->AHB1ENR |= RCC_AHB1ENR_GPIOCEN;
			break;
		case GPIOD:
			RCC->AHB1ENR |= RCC_AHB1ENR_GPIODEN;
			break;
		default:
			break;
	}
}

void Gpio::Init(void)
{
	RCC->AHB1ENR |= RCC_AHB1ENR_GPIODEN;
	mport->MODER |= 1UL << (mpin * 2);
}

void Gpio::Write(PIN_STATE state)
{
	switch (state) {
		case LOW:
			mport->ODR &= ~(1 << mpin);
			break;
		case HIGH:
			mport->ODR |= 1 << mpin;
			break;
		default:
			break;
	}
}

