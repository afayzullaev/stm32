#ifndef _GPIO_HPP_
#define _GPIO_HPP_
#ifdef __cplusplus
 extern "C" {
#endif

#include "main.h"

enum PIN_STATE{
	LOW = 0,
	HIGH
};


class Gpio
{
private:
	uint16_t mpin;
	GPIO_TypeDef* mport;
public:
	Gpio(uint16_t pin, GPIO_TypeDef* port);
	void Init(void);
	void Write(uint8_t state);
};




#ifdef __cplusplus
}
#endif



#endif
