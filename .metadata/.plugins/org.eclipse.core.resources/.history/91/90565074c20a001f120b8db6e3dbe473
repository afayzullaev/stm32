#include "gpio.hpp"

void gpio_init(void){
	// Enable GPIO clock for Port D
	RCC->AHB1ENR |= RCC_AHB1ENR_GPIODEN;
	GPIOD->MODER |= 1UL << 12;
	GPIOD->MODER |= 1UL << 13;
	GPIOD->MODER |= 1UL << 14;
	GPIOD->MODER |= 1UL << 15;
}

void gpio_write(uint8_t pin, uint8_t state){
	if(state == 1 || state == 0)
	{
		GPIOD->ODR = state << pin;
	}
}
